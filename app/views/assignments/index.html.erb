<h1>Assignments</h1> 

<%if current_user.role == "teacher" %>
  <div>
    <button class="btn btn-outline-success" type="button">
      <%= link_to "New assignment", new_assignment_path %>
    </button>
  </div>
<% end%>

<div class="mt-3" id="assignments">
  <% @assignments.each do |assignment| %>
    <div class="">
      <%= render assignment %>
    </div>
    <br>
  <% end %>
</div>


