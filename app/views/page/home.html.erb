<h1>Home Page</h1>
<% if current_user && current_user.role == "teacher"%>

    <h3>My Assignments</h3>
    <% @assignments.each do |assignment| %>
        <div class="">
            <%= render assignment %>
                <div class="mt-2"></div>
                <% assignment.submissions.each do |submission| %>
                    <div class="ms-5">
                        <%= render submission %>
                        <div class="mt-2"></div>
                            <% submission.ratings.each do |rating| %>
                                <div class="ms-5">
                                    <%= render rating %>
                                    <div class="mt-2"></div>
                                </div>
                            <% end %>
                    </div>
                <% end %>
        </div>
        <div class="mt-3"></div>
    <% end %>

<%elsif current_user && current_user.role == "student"%>
    <h3>My Submissions</h3>
    <div>
        <% @submissions.each do |submission| %>
            <div>
                <%= render submission %>
                <div class="mt-2"></div>
                    <% submission.ratings.each do |rating| %>
                        <div class="ms-5">
                            <%= render rating %>
                            <div class="mt-2"></div>
                        </div>
                    <% end %>
            </div>
        <% end %>
    </div>
<% end %>

